<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>スタッフ一覧 (管理者専用)</h2>
    <%= link_to "新規登録", signup_path, class: "btn btn-primary" %>
  </div>

  <div class="card shadow-sm">
    <table class="table table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>氏名</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th>権限</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.username %></td>

            <td><%= user.email %></td>
            <td>
              <% if user.is_admin? %>
                <span class="badge bg-danger">管理者</span>
              <% else %>
                <span class="badge bg-secondary">一般</span>
              <% end %>
            </td>
                        <td>
              <%# ここにボタンを追加 %>
              <%= link_to "削除", user_path(user), 
                          class: "btn btn-sm btn-outline-danger",
                          data: { turbo_method: :delete, turbo_confirm: "本当にこのユーザーを削除しますか？" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "ホームに戻る", home_path %>
  </div>
</div>