            <td><button class="btn btn-sm btn-outline-primary">編集</button></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "ホームに戻る", home_path %>
  </div>
</div>