<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%# カードデザインを復活させます %>
      <div class="card shadow-sm border-0">
        <div class="card-body p-4">
          <h2 class="text-center mb-4">ログイン</h2>

          <%= form_with(scope: :session, url: login_path) do |f| %>
            
            <%# ユーザーID入力欄 %>
            <div class="mb-3">
              <%= f.label :username, "ユーザーID", class: "form-label text-muted" %>
              <%= f.text_field :username, class: "form-control", placeholder: "IDを入力" %>
            </div>

            <%# パスワード入力欄 %>
            <div class="mb-3">
              <%= f.label :password, "パスワード", class: "form-label text-muted" %>
              <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力" %>
            </div>

            <%# 第12回の核心：永続ログイン用チェックボックス [cite: 117, 121-124] %>
            <div class="form-check mb-4">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, "Remember me on this computer", class: "form-check-label text-muted" %>
            </div>

            <%# ログインボタン %>
            <div class="d-grid">
              <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>