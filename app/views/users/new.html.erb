<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">ユーザー登録</h2>

        <%= form_with(model: @user, local: true) do |f| %>
          <%# === ここから form_with の中身 (f が使える範囲) === %>
          
          <div class="mb-3">
            <%= f.label :name, "氏名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <%# [重要] この username の欄は必ず end の前に書いてください %>
          <div class="mb-3">
            <%= f.label :username, "ユーザーID (ログイン用)", class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "例: user01" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "メールアドレス", class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :hourly_wage, "時給 (円)", class: "form-label" %>
            <%= f.number_field :hourly_wage, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :transportation_fee, "1日あたりの固定交通費 (円)", class: "form-label" %>
            <%= f.number_field :transportation_fee, class: "form-control", placeholder: "例: 500" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード(確認)", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "登録する", class: "btn btn-primary btn-lg" %>
          </div>

          <%# === ここまで form_with の中身 === %>
        <% end %>

      </div>
    </div>
  </div>
</div>