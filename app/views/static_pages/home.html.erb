<div class="container mt-5 text-center">
  <h1>ホーム</h1>
 <% if logged_in? %>
  <%# 修正後 %>
ようこそ、<%= current_user.username %>さん
  <% else %>
    <p class="lead text-muted">ようこそ！</p>
  <% end %>


  <div class="card shadow-sm p-4 text-center mt-4 border-0 bg-light rounded-3" style="max-width: 500px; margin: 0 auto;">
    <h3 class="text-secondary h5 mb-3">現在のステータス</h3>
    
    <% # 時間の強調を抑え、標準的なサイズに変更 %>
    <div id="working-timer" class="h2 fw-bold text-dark mb-4">00:00:00</div>

    <div class="d-grid gap-2 col-10 mx-auto">
      <button id="attendance-toggle-btn" 
              class="btn btn-lg btn-success py-3" 
              data-status="stopped">
        <i class="bi bi-play-fill"></i> 出勤する
      </button>

      <% # 休憩ボタンもシンプルなスタイルに %>
      <button id="break-toggle-btn" class="btn btn-warning mt-1 d-none text-white">
        <i class="bi bi-pause-fill"></i> 休憩入
      </button>
    </div>
  </div>

  <div class="d-grid gap-2 col-md-5 mx-auto mt-5">
    <%= link_to "勤怠の手動登録", attendance_form_path, class: "btn btn-outline-success btn-lg" %>
    <%= link_to "勤怠履歴の確認", attendances_path, class: "btn btn-outline-primary btn-lg" %>

    <% if logged_in? && current_user.is_admin? %>
      <%= link_to "スタッフ一覧(管理者用)", users_path, class: "btn btn-outline-secondary btn-lg" %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "ログアウト", logout_path, class: "text-muted small text-decoration-none" %>
  </div>
</div>