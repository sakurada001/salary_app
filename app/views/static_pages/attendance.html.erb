<div class="container mt-5" style="max-width: 600px;">
  <h2 class="mb-4">勤怠記録フォーム</h2>

  <div class="card shadow-sm">
    <div class="card-body">
      <%# Railsの保存機能と繋げるための設定 %>
      <%= form_with(model: @attendance, local: true) do |f| %>
        
        <div class="mb-3">
          <%= f.label :work_date, "勤務日", class: "form-label" %>
          <%= f.date_field :work_date, class: "form-control", value: Date.today %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <%= f.label :start_time, "出勤時間", class: "form-label" %>
            <%= f.time_field :start_time, class: "form-control" %>
          </div>

          <div class="col-md-6 mb-3">
            <%= f.label :end_time, "退勤時間", class: "form-label" %>
            <%= f.time_field :end_time, class: "form-control" %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :break_minutes, "休憩時間 (分)", class: "form-label" %>
          <%= f.number_field :break_minutes, class: "form-control", placeholder: "60" %>
        </div>

        <div class="mb-3">
          <%= f.label :extra_travel_cost, "交通費 (円)", class: "form-label" %>
          <%= f.number_field :extra_travel_cost, class: "form-control", placeholder: "0" %>
         
        </div>

        <div class="d-grid gap-2 mt-4">
          <%# type="button" ではなく f.submit にすることで、データを送信します %>
          <%= f.submit "勤務を記録する", class: "btn btn-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3 text-center">
    <%= link_to "ホームに戻る", home_path %>
  </div>
</div>